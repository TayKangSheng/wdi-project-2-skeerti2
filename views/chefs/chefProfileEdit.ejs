<form method="POST" action="/chefs/<%=adminChefItem._id%>?_method=PUT">
  <h2 style="color:white">Add more info</h2>
  <div class="form-group row">
    <div class="col-sm-5">
      <label class="form-control" for="name">Name</label>
      <input type="text" class="form-control" name="chefs[name]" value="<%=adminChefItem.local.name%>" id="name" placeholder="name">
    </div>
      </div>

  <div class="form-group row">
    <div class="col-sm-5">
    <label class="form-control" for="Info">Info</label>
    <input type="text" class="form-control" name="chefs[intro]" value="<%=adminChefItem.local.intro%>" id="intro" placeholder="Introduction">
   </div>
 </div>

  <div class="form-group row">
    <div class="col-sm-5">
    <label class="form-control" for="Address">Address</label>
    <input type="text" class="form-control" name="chefs[Address]" value="<%=adminChefItem.local.Address%>" id="Address" placeholder="Address">
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-5">
    <label class="form-control" for="cuisines">Cuisines</label>
    <input type="text" class="form-control" name="chefs[cuisines]" value="<%=adminChefItem.local.cuisines%>" id="cuisines" placeholder="cuisines">
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-5">
    <label class="form-control" for="recipes">Add a new Dish? </label>
    <input type="text" class="form-control" name="chefs[dishName]" value="<%=adminChefItem.local.recipes.dishName%>" id="dishName" placeholder="Name of dish">
   </div>
 </div>

  <div class="form-group row">
    <div class="col-sm-5">
    <label class="form-control" for="ingredients">Ingredients</label>
    <input type="text" class="form-control" name="chefs[ingredients]" value="<%=adminChefItem.local.recipes.ingredients%>" id="ingredients" placeholder="Ingredients">
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-5">
    <label class="form-control" for="cost">Cost</label>
    <input type="number" class="form-control" name="chefs[cost]" value="<%=adminChefItem.local.recipes.cost%>" id="cost" placeholder="cost">
    </div>
  </div>

  <div class="form-group row">
   <div class="col-sm-5">
    <label class="form-control" for="prepTime">Preparation Time</label>
    <input type="number" class="form-control" name="chefs[prepTime]" value="<%=adminChefItem.local.recipes.prepTime%>" id="prepTime" placeholder="prepTime">
   </div>
 </div>

  <div class="form-group row">
  <div class="col-sm-5">
  <button type="submit" class="btn btn-success">Save</button>
  </div>
  </div>
  </form>

  <form class="" action="/chefs/profileEdit/<%=adminChefItem._id%>?_method=DELETE" method="post">
    <div class="form-group row">
    <div class="col-sm-5">
    <button class="btn btn-success" type="submit" name="button">Delete Chef Account</button>
    </div>
  </div>
  </form>
